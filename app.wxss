.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
} 

.image{
    width: 100%;
    border-radius:5px;
}

.flex {
  display: flex;
  flex-direction: column;
}

.page_title {
  display: flex;
  margin-top: 10px;
  align-items: center;
  justify-content: center;
  background: #f8f8f8;
  border-radius: 5px;
  padding: 5px 0;
  color: #666;
  font-size: 1.2rem;
}